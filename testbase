package coreUtilities.testbase;

import java.time.Duration;
import java.util.Map;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;

public class testBase {

    public WebDriver driver;

    @BeforeClass(alwaysRun = true)
    public void initializeBrowser() {
        try {
            System.out.println("üöÄ Launching Chrome browser...");

            ChromeOptions options = new ChromeOptions();
            options.addArguments("--remote-allow-origins=*");
            options.addArguments("--disable-notifications");
            options.addArguments("--start-maximized");

            driver = new ChromeDriver(options);
            driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(15));
            driver.manage().window().maximize();

            System.out.println("‚úÖ Browser launched successfully.");

        } catch (Exception e) {
            System.err.println("‚ùå Browser initialization failed: " + e.getMessage());
            e.printStackTrace();
        }
    }

    public void initialize(Map<String, String> configData) throws Exception {
        String url = configData.get("url");
        if (url != null && !url.isEmpty()) {
            driver.get(url);
            System.out.println("‚úÖ Navigated to URL: " + url);
        } else {
            throw new Exception("URL is missing in config data.");
        }
    }

    @AfterClass(alwaysRun = true)
    public void tearDown() {
        browserTearDown();
    }

    public void browserTearDown() {
        try {
            if (driver != null) {
                System.out.println("üßπ Closing browser...");
                driver.quit();
                System.out.println("‚úÖ Browser closed successfully.");
            }
        } catch (Exception e) {
            System.err.println("‚ùå Error while closing browser: " + e.getMessage());
        }
    }

    public WebDriver getDriver() {
        return driver;
    }
}
